{
  "name": "@opentelemetry/sandbox-api",
  "version": "1.1.0",
  "description": "Public API for OpenTelemetry",
  "main": "build/src/index.js",
  "module": "build/esm/index.js",
  "types": "build/src/index.d.ts",
  "browser": {
    "./src/platform/index.ts": "./src/platform/browser/index.ts",
    "./build/esm/platform/index.js": "./build/esm/platform/browser/index.js",
    "./build/src/platform/index.js": "./build/src/platform/browser/index.js"
  },
  "repository": "https://github.com/open-telemetry/opentelemetry-js-api.git",
  "scripts": {
    "build": "npm run version && tsc --build tsconfig.json tsconfig.esm.json && npm run package",
    "rebuild": "npm run build",
    "compile": "npm run build",
    "clean": "tsc --build --clean tsconfig.json tsconfig.esm.json",
    "package": "npx rollup -c",
    "codecov:browser": "nyc report --reporter=json && codecov -f coverage/*.json -p .",
    "codecov": "nyc report --reporter=json && codecov -f coverage/*.json -p .",
    "docs": "typedoc",
    "docs:deploy": "gh-pages --dist docs/out",
    "docs:test": "linkinator docs/out --silent && linkinator docs/*.md *.md --markdown --silent",
    "lint:fix": "eslint src test --ext .ts --fix",
    "lint": "eslint src test --ext .ts",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "nyc ts-mocha -p tsconfig.json test/**/*.test.ts --exclude 'test/platform/browser/**/*.ts'",
    "test:browser": "nyc karma start ./karma.browser.conf.js --single-run",
    "test:debug": "nyc karma start ./config/karma.debug.conf.js --wait",
    "cycle-check": "dpdm --exit-code circular:1 src/index.ts",
    "version": "node ../../scripts/version-update.js",
    "watch": "npm run version && tsc --build --watch"
  },
  "keywords": [
    "opentelemetry",
    "nodejs",
    "browser",
    "tracing",
    "profiling",
    "stats",
    "monitoring"
  ],
  "author": "OpenTelemetry Authors",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=8.0.0"
  },
  "files": [
    "build/esm/**/*.js",
    "build/esm/**/*.js.map",
    "build/esm/**/*.d.ts",
    "build/src/**/*.js",
    "build/src/**/*.js.map",
    "build/src/**/*.d.ts",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@types/mocha": "8.2.3",
    "@types/node": "14.17.33",
    "@types/sinon": "10.0.6",
    "@types/webpack-env": "1.16.3",
    "@typescript-eslint/eslint-plugin": "5.3.1",
    "@typescript-eslint/parser": "5.3.1",
    "codecov": "3.8.3",
    "dpdm": "3.7.1",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "11.1.0",
    "gh-pages": "3.2.0",
    "istanbul-instrumenter-loader": "3.0.1",
    "karma": "^6.3.20",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-mocha": "^2.0.1",
    "karma-spec-reporter": "^0.0.34",
    "karma-webpack": "^4.0.2",
    "karma-typescript": "^5.5.3",
    "lerna-changelog": "1.0.1",
    "linkinator": "2.13.6",
    "mocha": "7.2.0",
    "nyc": "^15.1.0",
    "sinon": "^14.0.0",
    "ts-loader": "8.3.0",
    "ts-mocha": "9.0.2",
    "typedoc": "^0.22.17",
    "typescript": "4.4.4",
    "webpack": "^4.46.0",
    "rollup": "^2.32.0"
  }
}