{
  "name": "@opentelemetry/sandbox-propagator-b3",
  "version": "1.3.1",
  "description": "OpenTelemetry B3 propagator provides context propagation for systems that are using the B3 header format",
  "main": "build/src/index.js",
  "module": "build/esm/index.js",
  "esnext": "build/esnext/index.js",
  "types": "build/src/index.d.ts",
  "repository": "open-telemetry/opentelemetry-js",
  "scripts": {
    "build": "npm run version && tsc --build tsconfig.all.json && npm run package",
    "rebuild": "npm run build",
    "compile": "npm run build",
    "clean": "tsc --build --clean tsconfig.all.json",
    "package": "npx rollup -c",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "nyc ts-mocha -p tsconfig.json test/**/*.test.ts --exclude 'test/platform/browser/**/*.ts'",
    "test:browser": "nyc karma start ./karma.browser.conf.js --single-run",
    "test:debug": "nyc karma start ./karma.debug.conf.js --wait",
    "codecov": "nyc report --reporter=json && codecov -f coverage/*.json -p ../../",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "version": "node ../../../scripts/version-update.js",
    "watch": "npm run version && tsc --build --watch tsconfig.all.json",
    "peer-api-check": "node ../../../scripts/peer-api-check.js"
  },
  "keywords": [
    "opentelemetry",
    "nodejs",
    "tracing",
    "profiling",
    "monitoring",
    "b3"
  ],
  "author": "OpenTelemetry Authors",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=8.12.0"
  },
  "files": [
    "build/esm/**/*.js",
    "build/esm/**/*.js.map",
    "build/esm/**/*.d.ts",
    "build/esnext/**/*.js",
    "build/esnext/**/*.js.map",
    "build/esnext/**/*.d.ts",
    "build/src/**/*.js",
    "build/src/**/*.js.map",
    "build/src/**/*.d.ts",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@opentelemetry/sandbox-core": "1.3.1"
  },
  "peerDependencies": {
    "@opentelemetry/sandbox-api": ">=1.0.0 <1.1.0"
  },
  "devDependencies": {
    "@opentelemetry/sandbox-api": "1.1.0",
    "@types/mocha": "8.2.3",
    "@types/node": "14.17.33",
    "@types/webpack-env": "1.16.3",
    "codecov": "3.8.3",
    "istanbul-instrumenter-loader": "3.0.1",
    "karma": "^6.3.20",
    "karma-chrome-launcher": "^3.1.1",
    "karma-coverage-istanbul-reporter": "^3.0.3",
    "karma-mocha": "^2.0.1",
    "karma-spec-reporter": "^0.0.34",
    "karma-webpack": "^4.0.2",
    "karma-typescript": "^5.5.3",
    "mocha": "7.2.0",
    "chromium": "^3.0.3",
    "puppeteer": "^14.2.1",
    "sinon": "^14.0.0",
    "nyc": "^15.1.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "14.2.1",
    "eslint-plugin-header": "3.1.1",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-node": "11.1.0",
    "rimraf": "3.0.2",
    "ts-loader": "8.3.0",
    "ts-mocha": "9.0.2",
    "typescript": "4.4.4",
    "rollup": "^2.32.0"
  }
}
