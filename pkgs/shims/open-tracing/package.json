{
  "name": "@opentelemetry/sandbox-shim-opentracing",
  "version": "1.3.1",
  "description": "OpenTracing to OpenTelemetry shim",
  "main": "build/src/index.js",
  "types": "build/src/index.d.ts",
  "repository": "open-telemetry/opentelemetry-js",
  "scripts": {
    "build": "npm run version && tsc --build tsconfig.all.json && npm run package",
    "rebuild": "npm run build",
    "compile": "npm run build",
    "clean": "tsc --build --clean tsconfig.all.json",
    "package": "npx rollup -c",
    "test": "npm run test:node && npm run test:browser",
    "test:node": "nyc ts-mocha -p tsconfig.json test/**/*.test.ts --exclude 'test/browser/**/*.ts'",
    "test:browser": "nyc karma start ./karma.browser.conf.js --single-run",
    "test:debug": "nyc karma start ./karma.debug.conf.js --wait",
    "version": "node ../../../scripts/version-update.js",
    "watch": "npm run version && tsc --build --watch tsconfig.all.json",
    "prepublishOnly": "npm run compile",
    "tdd": "npm run test -- --watch-extensions ts --watch",
    "codecov": "nyc report --reporter=json && codecov -f coverage/*.json -p ../../",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "peer-api-check": "node ../../scripts/peer-api-check.js"
  },
  "keywords": [
    "opentelemetry",
    "nodejs",
    "tracing",
    "profiling"
  ],
  "author": "OpenTelemetry Authors",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=8.12.0"
  },
  "files": [
    "build/src/**/*.js",
    "build/src/**/*.js.map",
    "build/src/**/*.d.ts",
    "doc",
    "LICENSE",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@opentelemetry/api": ">=1.0.0 <1.2.0",
    "@opentelemetry/propagator-b3": "1.3.1",
    "@opentelemetry/propagator-jaeger": "1.3.1",
    "@opentelemetry/sdk-trace-base": "1.3.1",
    "@types/mocha": "8.2.3",
    "@types/node": "14.17.33",
    "codecov": "3.8.3",
    "mocha": "7.2.0",
    "nyc": "^15.1.0",
    "rimraf": "3.0.2",
    "ts-mocha": "9.0.2",
    "typescript": "4.4.4",
    "@opentelemetry/sandbox-api": "1.1.0",
    "@opentelemetry/sandbox-propagator-b3": "1.3.1",
    "@opentelemetry/sandbox-propagator-jaeger": "1.3.1",
    "@opentelemetry/sandbox-sdk-trace-base": "1.3.1"
  },
  "peerDependencies": {
    "@opentelemetry/api": ">=1.0.0 <1.2.0"
  },
  "dependencies": {
    "@opentelemetry/core": "1.3.1",
    "@opentelemetry/semantic-conventions": "1.3.1",
    "opentracing": "^0.14.4",
    "@opentelemetry/sandbox-core": "1.3.1",
    "@opentelemetry/sandbox-semantic-conventions": "1.3.1"
  }
}